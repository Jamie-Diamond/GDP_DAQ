<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detial_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="foilingcatgdp.sailingstats.DetailViewActivity"
    android:background="@color/colorPrimaryDark">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:text="Lat:"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center"
            android:layout_width="150dp"
            android:textAlignment="center"
            style="@style/Title"/>

        <TextView
            android:text="Long:"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_centerHorizontal="true"
            style="@style/Title"
            android:layout_gravity="bottom|center"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            style="@style/Metric"
            android:id="@+id/latValTxt"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            style="@style/Metric"
            android:id="@+id/longValTxt"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headingValTxt"
            style="@style/Metric"
            android:textAlignment="center"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Metric"
            android:id="@+id/speedValTxt"
            android:textAlignment="center"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal" />

        <TextView
            android:text="Speed (knots):"
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="bottom|fill_horizontal"
            android:textAlignment="center" />

        <Button
            android:text="Start"
            style="@style/Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startStreamBtn"
            android:layout_centerHorizontal="true"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center" />

        <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopStreamBtn"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="center"
            style="@style/BtnDown" />

        <TextView
            android:text=""
            android:layout_height="wrap_content"
            android:id="@+id/statusTxt"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center"
            android:layout_width="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            style="@style/Title"/>

        <TextView
            android:text="Heading (deg):"
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="bottom|fill_horizontal"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/spacer1"
            android:layout_row="0"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/spacer2"
            android:layout_row="1"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/spacer3"
            android:layout_row="2"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/spacer4"
            android:layout_row="3"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/spacer5"
            android:layout_row="4"
            android:layout_column="2" />

    </GridLayout>

    <TextView
        android:text=""
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/topRightTxt" />

</RelativeLayout>
